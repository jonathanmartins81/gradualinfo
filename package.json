{
  "name": "gradualinfo-website",
  "version": "1.0.0",
  "description": "Website oficial da Gradual Info - Desenvolvido pela Aqua9. Site moderno com TypeScript, SEO otimizado e ferramentas de qualidade de código.",
  "keywords": [
    "gradualinfo",
    "gradual info",
    "nextjs",
    "react",
    "typescript",
    "aqua9",
    "jonathan simão",
    "website",
    "fullstack",
    "web development",
    "frontend",
    "backend",
    "seo",
    "performance",
    "modern web",
    "developer tools",
    "code quality",
    "testing",
    "storybook",
    "sentry"
  ],
  "author": {
    "name": "Jonathan Simão",
    "email": "contato@aqua9.com.br",
    "url": "https://aqua9.com.br"
  },
  "license": "MIT",
  "homepage": "https://aqua9.com.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/aqua9/boilerplate_aqua9.git"
  },
  "bugs": {
    "url": "https://github.com/aqua9/boilerplate_aqua9/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://aqua9.com.br"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:report": "vitest --coverage --reporter=html",
    "test:coverage:ci": "vitest --coverage --reporter=json --reporter=text",
    "codecov": "codecov",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install",
    "audit": "npm audit --audit-level=moderate",
    "security": "npm audit && npx snyk test",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    "build:analyze": "ANALYZE=true npm run build",
    "deps:check": "npx knip",
    "deps:update": "npx npm-check-updates -u",
    "deps:audit": "npm audit --audit-level=moderate",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:deploy": "npm run storybook:build && npx storybook-to-ghpages",
    "generate:component": "plop component",
    "generate:page": "plop page",
    "generate:hook": "plop hook",
    "generate:util": "plop util",
    "setup": "node scripts/setup.js",
    "clean": "rm -rf .next out dist coverage .turbo",
    "clean:deps": "rm -rf node_modules package-lock.json && npm install",
    "preview": "npm run build && npm run start",
    "analyze": "npm run build:analyze",
    "performance": "npm run build && npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "performance:ci": "npm run build && npx lhci autorun",
    "seo:check": "npx lighthouse http://localhost:3000 --only-categories=seo --output=json",
    "accessibility:check": "npx lighthouse http://localhost:3000 --only-categories=accessibility --output=json",
    "docker:build": "docker build -t aqua9-boilerplate .",
    "docker:run": "docker run -p 3000:3000 aqua9-boilerplate",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel",
    "railway:deploy": "railway up",
    "netlify:deploy": "netlify deploy --prod",
    "netlify:preview": "netlify deploy --dir=out",
    "check-all": "npm run quality && npm run test:coverage && npm run security && npm run deps:check",
    "pre-commit": "npm run quality:fix && npm run test",
    "post-commit": "npm run deps:check",
    "pre-push": "npm run check-all"
  },
  "dependencies": {
    "@sentry/nextjs": "^9.43.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "clsx": "^2.1.1",
    "eslint-config-next": "^15.4.4",
    "framer-motion": "^12.23.12",
    "jose": "^6.0.12",
    "next": "^15.4.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/testing-library": "^0.2.0",
    "@swc/jest": "^0.2.39",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.0.5",
    "codecov": "^3.8.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "lefthook": "^1.12.2",
    "lint-staged": "^16.1.2",
    "plop": "^4.0.1",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.4.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "browserslist": [">0.3%", "not dead", "not op_mini all"],
  "publishConfig": {
    "access": "public"
  }
}
